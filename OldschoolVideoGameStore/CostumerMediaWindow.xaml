<Window x:Class="OldschoolVideoGameStore.CostumerMediaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OldschoolVideoGameStore"
        mc:Ignorable="d"
        Title="CostumerMediaWindow" Height="450" Width="800" ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterScreen"  Background="#4B0FA5">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <!--ELEMENTS-->

        <ListView Name="lstMyMedia" Grid.Column="2" Grid.Row="4" Grid.ColumnSpan="2" Grid.RowSpan="7" Background="#641892" BorderBrush="#4B0FA5"/>
        <ListView Name="lstSelectedMedia" Grid.Column="5" Grid.Row="4" Grid.ColumnSpan="2" Grid.RowSpan="4" Background="#641892" BorderBrush="#4B0FA5"/>

        <ComboBox Name="cbAllGenres" Grid.Column="3" Grid.Row="3" Height="20" Width="100" Margin="0 10 0 0" HorizontalAlignment="Right"/>

        <Label Name="lblDisplayName" Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="2" Content="*FullName*" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="25" FontFamily="Narkisim" Foreground="#FCFEFD" FontWeight="Heavy"/>
        <Label Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="2" Content="My Media" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="15" FontFamily="Narkisim" Foreground="#FCFEFD" FontWeight="Bold"/>
        <Label Grid.Column="2" Grid.Row="3" Content="Media" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="11" FontFamily="Narkisim" Foreground="#FCFEFD" FontWeight="Bold"/>
        <Label Name="lblTitle" Grid.Column="5" Grid.Row="3" Content="*Title*" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="11" FontFamily="Narkisim" Foreground="#FCFEFD" FontWeight="Bold"/>
        <Label Name="lblMediaType" Grid.Column="6" Grid.Row="4" Content="*MediaType*" HorizontalAlignment="Right" VerticalAlignment="Top" FontSize="11" FontFamily="Narkisim" Foreground="#FCFEFD" FontWeight="Bold"/>

        <TextBlock Name="blkLibrary" Grid.Column="6" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="63 12 45 0" >
    <Hyperlink Click="blkLibrary_Click">
        <Hyperlink.Style>
            <Style TargetType="Hyperlink"
                BasedOn="{StaticResource {x:Type Hyperlink}}">
                <Setter Property="Foreground" Value="#FCFEFD"/>
            </Style>
        </Hyperlink.Style>
        Library
    </Hyperlink>
        </TextBlock>

        <Button Name="btnReturnMedia" Grid.Column="3" Grid.Row="11" Height="30" Width="80" HorizontalAlignment="Right" Content="Return" BorderBrush="#641892" Background="#771fcb" Foreground="#FCFEFD"/>
        <Button Name="btnRateMedia" Grid.Column="6" Grid.Row="8" Height="30" Width="80" HorizontalAlignment="Right" Content="Rate" BorderBrush="#641892" Background="#771fcb" Foreground="#FCFEFD" Click="btnRateMedia_Click"/>
        <Button Name="btnLogOut" Grid.Column="6" Grid.Row="1" Height="30" Width="60" HorizontalAlignment="Right" Content="Log Out" BorderBrush="#641892" Background="#771fcb" Foreground="#FCFEFD" Click="btnLogOut_Click"/>

    </Grid>
</Window>
